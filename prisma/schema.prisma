generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model WordUnit {
  id   Int    @id @default(autoincrement())
  lang String
  text String

  sourceWords Word[] @relation(name: "sourceWords")
  targetWords Word[] @relation(name: "targetWords")
}

model Word {
  id                 Int      @id @default(autoincrement())
  userId             Int
  createdAt          DateTime @default(now())
  sourceWord         WordUnit @relation(fields: [sourceWordUnitId], references: [id], name: "sourceWords")
  targetWord         WordUnit @relation(fields: [targetWordUnitId], references: [id], name: "targetWords")
  sourceWordUnitId   Int
  targetWordUnitId   Int
  generatedSoundHash String   @default("")
  User               User     @relation(fields: [userId], references: [id])
}

model User {
  id Int @unique

  words    Word[]
  settings Settings @relation(fields: [settingsId], references: [id])

  wordIds    Int[]
  settingsId Int
}

model Settings {
  id                        Int     @id @default(autoincrement())
  isCustomAudioPreferable   Boolean @default(true)
  playerQueueSize           Int     @default(5)
  lastPlayedRemindersSize   Int     @default(3)
  delayPlayerSourceToTarget Int     @default(1000)
  delayPlayerWordToWord     Int     @default(2000)
  sourceVoice               String  @default("larynx:northern_english_male-glow_tts")
  targetVoice               String  @default("glow-speak:ru_nikolaev")
  repeatSourceCount         Int     @default(1)
  repeatTargetCount         Int     @default(1)
  repeatWordCount           Int     @default(1)
  repeatSourceDelay         Int     @default(0)
  repeatTargetDelay         Int     @default(0)
  queueStrategy             String  @default("sequence")
  User                      User[]
}
